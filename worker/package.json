{
  "name": "worker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "dotenv -e ../.env -- wrangler dev",
    "build": "tsc --noEmit && echo 'Worker build validated'",
    "deploy": "dotenv -e ../.env -- wrangler deploy",
    "deploy:prod": "dotenv -e ../.env -- wrangler deploy --env production",
    "tail": "dotenv -e ../.env -- wrangler tail",
    "tail:prod": "dotenv -e ../.env -- wrangler tail --env production",
    "d1:create": "dotenv -e ../.env -- wrangler d1 create darik-finance-dev",
    "d1:migrate": "dotenv -e ../.env -- wrangler d1 migrations apply darik-finance-dev --local",
    "d1:migrate:remote": "dotenv -e ../.env -- wrangler d1 migrations apply darik-finance-dev",
    "d1:migrate:prod": "dotenv -e ../.env -- wrangler d1 migrations apply darik-finance-prod --env production",
    "kv:create": "dotenv -e ../.env -- wrangler kv:namespace create darik-kv-dev",
    "typecheck": "tsc --noEmit",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "finance",
    "local-first"
  ],
  "author": "",
  "license": "ISC",
  "description": "Cloudflare Worker API for Darik Finance Tracker",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251106.1",
    "dotenv-cli": "^11.0.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.46.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "hono": "^4.10.4",
    "zod": "^4.1.12"
  }
}
